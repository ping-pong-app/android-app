<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="100"
    android:id="@+id/nav_view_header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="?attr/colorNavigationHeaderBackground">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="?attr/colorBackgroundSecondary"
            android:background="@drawable/round_corner_br" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:backgroundTint="?attr/colorNavigationHeaderBackground"
        android:background="@drawable/round_corner_tl" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:gravity="center"
        android:background="?attr/colorNavigationHeaderBackground"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/nav_header_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Din Music"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="?attr/colorTextPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_header_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dinmusic@gmail.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?attr/colorTextPrimary" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:backgroundTint="?attr/colorNavigationHeaderBackground"
        android:background="@drawable/round_corner_br" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="?attr/colorNavigationHeaderBackground">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="?attr/colorBackgroundSecondary"
            android:background="@drawable/round_corner_tl" />
    </LinearLayout>

</LinearLayout>